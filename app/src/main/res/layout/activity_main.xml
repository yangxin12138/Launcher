<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingStart="50dp"
    android:paddingBottom="50dp"
    android:paddingEnd="50dp"
    android:background="@color/background">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="12:30"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:paddingEnd="10dp"
                android:gravity="end"/>
            <ImageView
                android:id="@+id/iv_wifi"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:visibility="visible"
                android:src="@drawable/wifi_signal_high" />
            <ImageView
                android:id="@+id/iv_battery"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/battery_icon_full" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="50dp">
            <ImageButton
                android:id="@+id/button_youtube"
                android:layout_width="380dp"
                android:src="@drawable/icon_youtube"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/button_google"
                android:layout_width="380dp"
                android:src="@drawable/icon_googleplay"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/button_facebook"
                android:layout_width="380dp"
                android:src="@drawable/icon_facebook"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="20dp">
            <ImageButton
                android:id="@+id/button_netflix"
                android:layout_width="380dp"
                android:src="@drawable/icon_netflix"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="380dp"
                android:layout_marginEnd="20dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/button_bt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_bluetooth"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent" />
                <ImageButton
                    android:id="@+id/button_usb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_usb"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/button_settings"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_settings"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent" />
                <ImageButton
                    android:id="@+id/button_application"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_application"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>

</LinearLayout>